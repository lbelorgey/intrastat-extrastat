<odoo>

    <!-- product.template form view -->
    <record id="product_template_form_view" model="ir.ui.view">
      <field name="name">hs_code.product.template.form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view" />
      <field name="arch" type="xml">
        <field name="list_price" position="after">
          <label for="compute_hs_code_id" string="H.S. Code" class="oe_read_only"/>
          <field name="compute_hs_code_id" nolabel="1" class="oe_read_only" attrs="{'invisible': [('type', '=', 'service')]}"/>
          <label for="hs_code_id" class="oe_edit_only"/>
          <field name="hs_code_id" nolabel="1" class="oe_edit_only" attrs="{'invisible': [('type', '=', 'service')]}"/>
          <field name="origin_country_id" attrs="{'invisible': [('type', '=', 'service')]}"/>
        </field>
      </field>
    </record>

</odoo>
